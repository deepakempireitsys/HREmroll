
@model IEnumerable<HREmroll.Models.Licence>
@{
    ViewData["Title"] = "GetAllLicenceDetails";
}


<p>
    <span>@Html.ActionLink("Add New Licence", "Add")</span>

    <span>@Html.ActionLink("InActive Licence", "GetInActive")</span>

    <span>@Html.ActionLink("Back to Licence List", "GetAll")</span>

</p>

<table class="table" border="1" style="border-collapse: collapse;" cellpadding="3">

    <tr>

        @*<th border="1"> @Html.DisplayNameFor(model => model.LICENCE_NAME) </th>
            <th border="1"> @Html.DisplayNameFor(model => model.DESCRIPTION) </th>
            @* <th> @Html.DisplayNameFor(model => model.Address) </th>*@

        <th>@Html.DisplayNameFor(model => model.CMP_ID)</th>
        <th>@Html.DisplayNameFor(model => model.CMP_NAME)</th>

        <th>@Html.DisplayNameFor(model => model.LICENCE_ID)</th>
        <th>@Html.DisplayNameFor(model => model.LICENCE_NAME)</th>
        <th>@Html.DisplayNameFor(model => model.CREATED_BY)</th>
        <th>@Html.DisplayNameFor(model => model.CREATED_DATE)</th>
        <th>@Html.DisplayNameFor(model => model.MODIFIED_BY)</th>
        <th>@Html.DisplayNameFor(model => model.MODIFIED_DATE)</th>
        <th>@Html.DisplayNameFor(model => model.ISACTIVE)</th>
        <th>@Html.DisplayNameFor(model => model.DESCRIPTION)</th>
        <th>@Html.DisplayName("Edit / Delete")</th>

    </tr>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.LICENCE_ID)
<tr>
    <td>@Html.DisplayFor(model => item.CMP_ID)</td>
    <td>@Html.DisplayFor(model => item.CMP_NAME)</td>

    <td>@Html.DisplayFor(model => item.LICENCE_ID)</td>
    <td>@Html.DisplayFor(model => item.LICENCE_NAME)</td>
    <td>@Html.DisplayFor(model => item.CREATED_BY)</td>
    <td>@Html.DisplayFor(model => item.CREATED_DATE)</td>
    <td>@Html.DisplayFor(model => item.MODIFIED_BY)</td>
    <td>@Html.DisplayFor(model => item.MODIFIED_DATE)</td>
    <td>@Html.DisplayFor(model => item.ISACTIVE)</td>
    <td>@Html.DisplayFor(model => item.DESCRIPTION)</td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.LICENCE_ID })
        | @Html.ActionLink("Delete", "Delete", new { id = item.LICENCE_ID }, new { onclick = "return confirm('Are sure wants to delete?');" })
    </td>
</tr>

    }

</table> 