    <td>@Html.DisplayFor(model => item.BANK_IFSC_CODE)</td>
    <td>@Html.DisplayFor(model => item.DEFAULT_BANK)</td>

    <td>@Html.DisplayFor(model => item.CREATED_BY)</td>
    <td>@Html.DisplayFor(model => item.CREATED_DATE)</td>

    <td>@Html.DisplayFor(model => item.MODIFIED_BY)</td>
    <td>@Html.DisplayFor(model => item.MODIFIED_DATE)</td>
    <td>@Html.DisplayFor(model => item.ISACTIVE)</td>


    <td>
        @Html.ActionLink("Edit", "EditDesignation", new { id = item.BANK_ID })
        | @Html.ActionLink("Delete", "DeleteDesignation", new { id = item.BANK_ID }, new { onclick = "return confirm('Are sure wants to delete?');" })
    </td>
</tr>

    }

</table> 